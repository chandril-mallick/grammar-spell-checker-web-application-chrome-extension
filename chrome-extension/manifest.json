{
  "manifest_version": 3,
  "name": "Grammar & Spell Checker",
  "version": "1.0.0",
  "description": "AI-powered grammar and spell checking for any text input on the web - WhatsApp, Gmail, Google Docs, and more!",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/grammar-checker.js", "content.js"],
      "css": ["content-styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "Grammar & Spell Checker"
  },
  "options_page": "options/options.html",
  "commands": {
    "check-grammar": {
      "suggested_key": {
        "default": "Alt+Shift+C",
        "mac": "Alt+Shift+C"
      },
      "description": "Check grammar and spelling"
    }
  }
}
